@{
    Layout = null;
    string status = string.Empty;
    @if (ViewBag.Status != null)
    {
        status = (string)ViewBag.Status;
    }
}


<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Transaction Successful</title>
    <link href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            background-color: #f8f9fa;
        }

        .container {
            margin-top: 100px;
            max-width: 600px;
            padding: 20px;
            background: #fff;
            border-radius: 10px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        }

        .success-icon {
            font-size: 80px;
            color: #28a745;
        }

        .success-message {
            font-size: 24px;
            font-weight: bold;
            color: #333;
            margin-top: 20px;
        }

        .failed-message {
            font-size: 24px;
            font-weight: bold;
            color: red;
            margin-top: 20px;
        }

        .success-description {
            font-size: 16px;
            color: #666;
            margin: 10px 0 20px;
        }

        .failed-description {
            font-size: 16px;
            color: red;
            margin: 10px 0 20px;
        }

        .btn-primary {
            background-color: #28a745;
            border-color: #28a745;
        }

            .btn-primary:hover {
                background-color: #218838;
                border-color: #1e7e34;
            }
    </style>
</head>
<body>
    <div class="container text-center">
        <div class="success-icon">
            <i class="fas fa-check-circle"></i>
        </div>
        @if (!string.IsNullOrEmpty(status))
        {
            if (status == "successful")
            {
                <div class="success-message">
                    Transaction Successful!
                </div>
                <div class="success-description">
                    Your transaction has been completed successfully. Thank you for your payment.
                </div>
            }
            else
            {
                <div class="failed-message">
                    Transaction Successful!
                </div>
                <div class="failed-description">
                    Your transaction has been completed successfully. Thank you for your payment.
                </div>
            }
        }
        <button class="btn btn-primary btn-lg" onclick="window.location.href='/'">Go to Homepage</button>
        <button class="btn btn-outline-secondary btn-lg mt-2" onclick="window.location.href='/transactions'">View Transactions</button>
    </div>

    <script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
    <script src="https://kit.fontawesome.com/a076d05399.js"></script>
</body>
</html>

